{
  "name": "Youtube remote controller",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Control your playlist from your mobile phone",
  "icons": {
    "16": "img/icon-16.png",
    "128": "img/icon-128.png"
  },
  "default_locale": "en",
  "app": {
    "background": {
      "scripts": ["libs/jquery-1.8.3.min.js", "main.js"]
    }
  },
  "permissions": ["system.network", "webview", "http://ytrc.apajo.ee/*"],
   "content_scripts": [{
     "js": ["libs/jquery-1.8.3.min.js"],
     "matches": ["http://*/*", "https://*/*", "http://ytrc.apajo.ee/*"]
   }],
    "content_security_policy": "script-src 'self' http://ytrc.apajo.ee/* 'http://*.googleapis.com/*; object-src 'self'",
  "sockets": {
    "tcpServer" : {
      "listen": ["*"]
    }
  }
}
